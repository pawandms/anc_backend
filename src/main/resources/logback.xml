<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg %n</Pattern>
		</encoder>
	</appender>

	<appender  name="asyncConsole" class="ch.qos.logback.classic.AsyncAppender">
		<neverBlock >true</neverBlock>
		<!--not adding discardingThreshold default 80% capactiy  queueSize default 256-->
		<maxFlushTime>2000</maxFlushTime>
		<appender-ref ref="consoleAppender" />

	</appender>

	<appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${HNET_HOME}/logs/hifi-log.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		    <!-- daily rollover -->
			<FileNamePattern>${HNET_HOME}/logs/minutes/hifi-log.%d{yyyy-MM-dd}.log</FileNamePattern>
			<!-- keep 30 days' worth of history -->
			<maxHistory>10</maxHistory>
		</rollingPolicy>

		<encoder>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</Pattern>
		</encoder> 	    
  	</appender>
  	
  	<appender name="minuteRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		    <!-- rollover every minute -->
			<FileNamePattern>${HNET_HOME}/logs/minutes/hifi-log-minute.%d{yyyy-MM-dd_HH-mm}.log</FileNamePattern>
			<!-- keep 30 minutes' worth of history -->
			<maxHistory>30</maxHistory>			
		</rollingPolicy>

		<encoder>
			<Pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</Pattern>
		</encoder>
  	</appender>


	<!--Modified on 18-2-20 as logging was not happening because reference was call before creating object of appender
	asyncDailyRolling &  asyncMinuteRolling -->
	<appender name="asyncDailyRolling" class="ch.qos.logback.classic.AsyncAppender">
		<neverBlock >true</neverBlock>
		<maxFlushTime>2000</maxFlushTime>
		<appender-ref ref="dailyRollingFileAppender" />
	</appender>
	<appender name="asyncMinuteRolling" class="ch.qos.logback.classic.AsyncAppender">
		<neverBlock >true</neverBlock>
		<maxFlushTime>2000</maxFlushTime>
		<appender-ref ref="minuteRollingFileAppender" />
	</appender>



	<logger name="com.vod" additivity="false">
	    <level value="${LOG_LEVEL}" />
		 <appender-ref ref="asyncConsole" />
		 <appender-ref ref="asyncDailyRolling"/>
		 <appender-ref ref="asyncMinuteRolling"/>
	</logger>

	<root level="info">
		<appender-ref ref="asyncConsole" />
		<appender-ref ref="asyncDailyRolling"/>
		<appender-ref ref="asyncMinuteRolling"/>
	</root>

	<logger name="org.springframework.security" level="ERROR" /> 
	<logger name="org.springframework.security.web.access" level="ERROR" /> 
	

	<!-- Hikari Connection Pool Logging -->
	<logger name="com.zaxxer.hikari" level="TRACE"/>
		
</configuration>